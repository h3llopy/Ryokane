<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-extend="PackLotLinePopupWidget">
        <t t-jquery=".packlot-lines" t-operation="append">
            <div class="packlot-select">
                <t t-if="widget.options.pack_lot_lines and widget.options.pack_lot_lines.lot_name">
                    <select class="packlot-line-select">
                        <option disabled="" selected="" value="">Select Lot Number</option>
                        <t t-foreach="widget.options.pack_lot_lines.lot_name" t-as="lot_name">
                            <option t-att-value="lot_name">
                                <t t-esc="lot_name" />
                            </option>
                        </t>
                    </select>
                </t>
            </div>
        </t>
    </t>
    <t t-name="Practitioner">
        <div class='control-button'>
            <i class='fa fa-user' />
            <span class="practitioner">
                Practitioner
            </span>
        </div>
    </t>
    <t t-name="ReservationSource">
        <div class='control-button'>
            <i class='fa fa-user' />
            <span class="reservation">Reservation Source
            </span>
        </div>
    </t>
    <t t-name="SalesPerson">
        <div class='control-button'>
            <i class='fa fa-user' />
            <span class="salesperson">Sales Person
            </span>
        </div>
    </t>
    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-details-right .client-detail:nth-child(2)" t-operation="after">
            <div class='client-detail'>
                <span class='label'>Birthday</span>
                <input class='detail client-birthday' name='birthday' type='date' t-att-value='partner.birthday || ""'></input>
            </div>
        </t>
    </t>
</templates>